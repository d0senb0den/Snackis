@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}
<div class="container">
    @if (showBanner)
    {
            <div id="cookieConsent" class="row alert alert-info alert-dismissible fade show" role="alert">
                <div class="col-11">
                Den här sidan använder cookies. Klicka på OK för att acceptera. <a asp-page="/Privacy">Vill du veta mer?</a>
                </div>
                <div class="col-1">
                    <button type="button" class="accept-policy close border-0 bg-transparent" data-bs-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
                        <span style="font-size:large; font-weight: 500" aria-hidden="true">OK</span>
                    </button>
                </div>
            </div>

        <script>
            (function () {
                var button = document.querySelector("#cookieConsent button[data-cookie-string]");
                button.addEventListener("click", function (event) {
                    document.cookie = button.dataset.cookieString;
                }, false);
            })();
        </script>
    }
</div>