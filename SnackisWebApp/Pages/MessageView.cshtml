@page
@using Microsoft.AspNetCore.Identity
@using SnackisWebApp.Areas.Identity.Data

@inject SignInManager<SnackisUser> SignInManager
@inject UserManager<SnackisUser> UserManager

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@model SnackisWebApp.Pages.MessageViewModel
@{
}

<div class="container mt-5" style="width:800px">
    @if (Model.Messages.Count == 0)
    {
        <h1>Inkorgen är tom..</h1>
    }
    @foreach (var message in Model.Messages)
    {
        <div class="card">
            <div class="card-body">
                    <div class="col-1 text-right">
                        <form method="post" asp-page-handler="DeleteMessage">
                            <input type="hidden" asp-for="@Model.DeleteMessageId" value="@message.ID" />
                            <button type="submit" class="border-0 bg-transparent"><i class="fa fa-trash text-right" style="color:red; font-size:20px;"></i></button>
                        </form>
                    </div>
                <div class="row">
                    <div class="col-3 justify-content-center text-center">
                        @if (message.FromUser.ProfilePicture != null)
                        {
                            <img class="shadow-sm" style="width:100px;height:100px; object-fit:cover; border-radius:10px" src="data:image/*;base64,@(Convert.ToBase64String(message.FromUser.ProfilePicture))">
                            <br />
                            <small class="text-muted">@message.FromUser</small>
                        }
                        else
                        {
                            <i style="font-size: 100px;" class="fa fa-user text-muted"></i>
                            <br />
                            <small class="text-muted">@message.FromUser</small>
                        }
                    </div>
                    <div class="col-9">
                        <div class="row">
                            <strong>Meddelande:</strong>
                        </div>
                        <div class="row mt-3">
                            <span>@message.Content</span>
                        </div>
                        <div class="row mt-3">
                            <span>@message.SentAt</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>