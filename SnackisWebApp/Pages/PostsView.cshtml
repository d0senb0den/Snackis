
@page
@using Microsoft.AspNetCore.Identity
@using SnackisWebApp.Areas.Identity.Data

@inject SignInManager<SnackisUser> SignInManager
@inject UserManager<SnackisUser> UserManager

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@model SnackisWebApp.Pages.PostsViewModel
@{
}
@*<i class="fa fa-exclamation-circle" style="color:#FBEE70; font-size:25px;"></i>
<i class="fa fa-trash" style="color:#FB7070; font-size:25px;"></i>*@

<div class="container justify-content-center text-center mt-5" style="display:flex;">
    <div class="btn-group-vertical" style="width:800px">
        <div style="width:800px">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a style="text-decoration: none" asp-page="Index">Kategorier</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.SubCategory.Name</li>
                </ol>
            </nav>
        </div>
        @foreach (var post in Model.Posts)
        {
            if (Model.SubCategory.ID == post.SubCategoryID)
            {
                <div class="mb-2 rounded shadow-sm" style="width:800px; background-color: #C7E0ED">
                        <div class="mt-3 mb-3">
                    <div class="row">
                            @*<div class="col-2">
                            <i class="fa fa-exclamation-circle" style="color:#FBEE70; font-size:25px;"></i>
                            </div>*@
                            <div class="col">
                                <div class="fw-bold">
                                    <a style="text-decoration: none" asp-page="CommentsView" asp-route-PostId="@post.ID">@post.Name</a>
                                </div>
                            </div>
                            @*<div class="col-2">
                            <i class="fa fa-trash" style="color:#FB7070; font-size:25px;"></i>
                            </div>*@
                        </div>
                    </div>
                    <ol class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="col-12 ms-2 mt-2 mb-2">
                                @post.Content
                            </div>
                    </ol>
                    <div class="row">
                        <div class="col-6">
                            <small>Post skapad av: @post.User.UserName</small>
                        </div>
                        <div class="col-6">
                            <small>@post.CreatedAt</small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<div class="container justify-content-center text-center" style="display:flex;">
    <div class="mt-3">
        <form method="post">
            <input style="width:250px" asp-for="NewOrChangedPost.Name" placeholder="Namn" />
            <input style="width:300px" asp-for="NewOrChangedPost.Content" placeholder="Beskrivning" />
            <input type="hidden" asp-for="NewOrChangedPost.User" value="@Model.MyUser.Id" />
            <input type="hidden" asp-for="NewOrChangedPost.SubCategoryID" value="@Model.SubCategoryId" />
            <input style="background-color: transparent" type="submit" value="Skapa en ny post" />
        </form>
    </div>
</div>